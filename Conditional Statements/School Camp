package com.company;

import java.util.Scanner;

public class SchoolCamp{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String season = scanner.nextLine();
        String groupType = scanner.nextLine();
        int students = Integer.parseInt(scanner.nextLine());
        int nights = Integer.parseInt(scanner.nextLine());

        String sport = "";
        double price = 0;

        switch (season) {
            case "Winter":
                if (groupType.equals("boys") || groupType.equals("girls")) {
                    price = 9.6;
                } else if (groupType.equals("mixed")) {
                    price = 10;
                }
                break;
            case "Spring":
                if (groupType.equals("boys") || groupType.equals("girls")) {
                    price = 7.2;
                } else if (groupType.equals("mixed")) {
                    price = 9.5;
                }
                break;
            case "Summer":
                if (groupType.equals("boys") || groupType.equals("girls")) {
                    price = 15;
                } else if (groupType.equals("mixed")) {
                    price = 20;
                }
                break;
        }

        double totalPrice = price * students * nights;

        if (students >= 50) {
            totalPrice *= 0.5;
        } else if (students >= 20) {
            totalPrice *= 0.85;
        } else if (students >= 10) {
            totalPrice *= 0.95;
        }

        switch (season) {
            case "Winter":
                switch (groupType) {
                    case "girls":
                        sport = "Gymnastics";
                        break;
                    case "boys":
                        sport = "Judo";
                        break;
                    case "mixed":
                        sport = "Ski";
                }
                break;
            case "Spring":
                switch (groupType) {
                    case "girls":
                        sport = "Athletics";
                        break;
                    case "boys":
                        sport = "Tennis";
                        break;
                    case "mixed":
                        sport = "Cycling";
                }
                break;
            case "Summer":
                switch (groupType) {
                    case "girls":
                        sport = "Volleyball";
                        break;
                    case "boys":
                        sport = "Football";
                        break;
                    case "mixed":
                        sport = "Swimming";
                }
                break;
        }

        System.out.printf("%s %.2f lv.", sport, totalPrice);

    }
}
